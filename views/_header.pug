header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All Tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--users 
        if user   
            a.nav__el.nav__el--logout Logout
            a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`photo of ${user.photo}`)
                span=user.name.split(' ')[0]
        else      
            a.nav__el.nav__el--cta(href='/login')  LogIn
            button.nav__el.nav__el--cta  SignUp